{
  "compilerOptions": {
    "outDir": "build",
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "noUncheckedIndexedAccess": true
  },
  "include": [
    "packages",
    "test"
  ]
}
